@model ProductListViewModel

<table class="table">
    <thead>
        <a asp-action="ProductOrderBy" asp-controller="Product" asp-route-pagee="@Model.CurrentPage" asp-route-categoryy="@Model.CurrentCategory">
            <button id="ProductNameSort" class="btn btn-xs btn-success">
                A-Z
            </button>
        </a>

        <a asp-action="ProductHightToLower" asp-controller="Product" asp-route-pagee="@Model.CurrentPage" asp-route-categoryy="@Model.CurrentCategory">
            <button id="ProductPriceSort" class="btn btn-xs btn-success">
                Hight To Lower
            </button>
        </a>
        <tr>
            <th> ProductName</th>
            <th>UnitPrice</th>
            <th>UnitsInStock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.UnitPrice
                </td>
                <td>
                    @item.UnitsInStock
                </td>
                <td>
                    <a class="btn btn-xs btn-success"
                       href="/Cart/AddToCart?productId=@item.ProductId&page=@Model.CurrentPage&category=@Model.CurrentCategory">Add To Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>

